{
  "name": "comment-editor",
  "displayName": "Comment Editor",
  "description": "Remove comments from code using language-aware filters.",
  "version": "1.2.0",
  "publisher": "smalirat",
  "repository": {
    "type": "git",
    "url": "https://github.com/smalirat/comment-editor.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.106.1"
  },

  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:comment-editor.removeComments"
  ],
  "main": "./out/extension.js",
   "contributes": {
    "commands": [
      { "command": "comment-editor.runAll", "title": "Run All Filters" },
      { "command": "comment-editor.cleanComments", "title": "Remove Comments" },
      { "command": "comment-editor.cleanLogs", "title": "Remove Logs" }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile",
    "lint": "eslint src",
    "test": "vscode-test",
    "vscode:prepublish": "npm run build",
    "dev": "npm run watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.1",
    "typescript-eslint": "^8.46.3",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
